<h1>つぶやき一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>

      <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
      <td><%= link_to "投稿内容を編集する", edit_post_path(post.id) %></td>
      <td><%= link_to '投稿を削除する', post_path(post.id), method: :delete %></td>
    </tr>
  <% end %>
  </table>

  <%= link_to '新たにつぶやきを投稿する', new_post_path %>
